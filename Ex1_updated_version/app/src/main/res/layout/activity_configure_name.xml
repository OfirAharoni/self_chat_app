<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Configure_name">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Hello, new user!\n Please fill up your name:"
        android:id="@+id/welcome_tv"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:textSize="16dp"
        android:textColor="@android:color/black"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/et_input"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/welcome_tv"
        android:layout_alignBaseline="@+id/welcome_tv"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is my name"
        android:id="@+id/configure_btn"
        android:layout_marginTop="150dp"
        android:visibility="invisible"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/skip_btn"
        android:text="Skip"
        android:layout_marginTop="200dp"
        />
</RelativeLayout>